
<div class="row">
     <div class="col-sm-6">
          <h2 class='text-center'>Realizado</h2>

          <div class="card-deck">
            <% @todos_open.each do |todo|%>
              <div class="card">
                <%= image_tag todo.picture , class:'card-omg-top', 'height': '500px', 'width': '200px'%>
                 <div class="card-body">
                    <p class="card-text"><%= todo.description %></p>
                    <p class="card-text"><%= todo.completed ? 'Realizado' : 'Pendiente' %></p>
                   </div>
              </div>
            <% end %>
           </div> 
     </div>
      <div class="col-sm-6">
        <h2 cla='text-center'>Pendiente</h2>
          <div class="card-deck">
            <% @todos_close.each do |todo|%>
              <div class="card">
                <%= image_tag todo.picture , class:'card-omg-top', 'height': '500px', 'width': '200px'%>
                  <div class="card-body">
                    <p class="card-text"><%= todo.description %></p>
                    <p class="card-text"><%= todo.completed ? 'Realizado' : 'Pendiente' %></p>
                  </div>
               </div>
             <% end %>
           </div>

       </div>

 </div>

